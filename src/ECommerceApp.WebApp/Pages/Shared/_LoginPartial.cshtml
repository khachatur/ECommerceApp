@using System.IdentityModel.Tokens.Jwt
@using Microsoft.AspNetCore.Http

<ul class="navbar-nav">
	@{
		var jwtToken = Context.Session.GetString("JwtToken");
		string? userEmail = null;

		if (!string.IsNullOrEmpty(jwtToken))
		{
			var tokenHandler = new JwtSecurityTokenHandler();
			var token = tokenHandler.ReadJwtToken(jwtToken);
			userEmail = token.Claims.FirstOrDefault(c => c.Type == "email")?.Value;
		}
	}

	@if (!string.IsNullOrEmpty(jwtToken) && !string.IsNullOrEmpty(userEmail))
	{
		<li class="nav-item">
			<span class="nav-link text-dark">Hello, @userEmail!</span>
		</li>
		<li class="nav-item">
			<form method="post" asp-page-handler="Logout" asp-page="/Index" class="form-inline">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>